<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarmanhinhchinh"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#5BAF5E"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/menu_drawer"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/back"
            ></ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phân loại rác"
            android:textColor="#ffff"
            android:textSize="25dp"
            android:layout_marginLeft="20dp"
            >
        </TextView>

    </androidx.appcompat.widget.Toolbar>
    <TextView
        android:id="@+id/textView2"
        android:layout_width="167dp"
        android:layout_height="37dp"
        android:text="Thông tin Rác"
        android:textColor="#070707"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        tools:layout_editor_absoluteX="122dp"
        tools:layout_editor_absoluteY="77dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="167dp"
        android:layout_height="37dp"
        android:text="Số lượng Rác"
        android:textColor="#070707"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="507dp"
        tools:ignore="MissingConstraints" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="130dp"
        android:layout_height="200dp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/pin"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="155dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="138dp"
        android:layout_height="216dp"
        app:srcCompat="@drawable/thungdo"
        tools:layout_editor_absoluteX="245dp"
        tools:layout_editor_absoluteY="146dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="78dp"
        android:layout_height="29dp"
        android:text="Tên rác:"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="392dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="78dp"
        android:layout_height="29dp"
        android:text="Loại rác:"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="421dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="78dp"
        android:layout_height="29dp"
        android:text="Thùng rác:"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="450dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="258dp"
        android:layout_height="29dp"
        android:text="Thùng rác Chất thải nguy hại"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="111dp"
        tools:layout_editor_absoluteY="450dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="78dp"
        android:layout_height="29dp"
        android:text="Độc hại"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="111dp"
        tools:layout_editor_absoluteY="421dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="78dp"
        android:layout_height="29dp"
        android:text="Pin"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="111dp"
        tools:layout_editor_absoluteY="392dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button3"
        android:layout_width="151dp"
        android:layout_height="40dp"
        android:text="Đặt tại Box"
        android:textSize="10sp"
        android:textStyle="normal"
        app:backgroundTint="#2F7EBD"
        tools:layout_editor_absoluteX="33dp"
        tools:layout_editor_absoluteY="578dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button4"
        android:layout_width="151dp"
        android:layout_height="40dp"
        android:text="Đăng ký thu gom"
        android:textSize="10sp"
        android:textStyle="normal"
        app:backgroundTint="#2F7EBD"
        tools:layout_editor_absoluteX="207dp"
        tools:layout_editor_absoluteY="578dp"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>