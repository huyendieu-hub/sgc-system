<!DOCTYPE html>
<html lang="en">

<%- include('layouts/header-table'); -%>

    <body id="page-top">

        <!-- Page Wrapper -->
        <div id="wrapper">
            <%- include('layouts/navbar'); -%>


                <!-- Content Wrapper -->
                <div id="content-wrapper" class="d-flex flex-column">

                    <!-- Main Content -->
                    <div id="content">

                        <%- include('layouts/topbar'); -%>

                            <!-- BOdy-->

                            <!-- Begin Page Content -->
                            <div class="container-fluid">
                                <!-- Page Heading -->
                                <h1 class="h3 mb-2 text-gray-800">List Collection Member</h1>
                                <!-- DataTales Example -->
                                <div class="card shadow mb-4">
                                    <div class="card-header py-3">
                                        <h6 class="m-0 font-weight-bold text-primary">DataTables</h6>
                                    </div>
                                    <div class="card-body">
                                        <div class="table-responsive">
                                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                                <thead>
                                                    <tr>
                                                        <th>ID</th>
                                                        <th>Firstname</th>
                                                        <th>Lastname</th>
                                                        <th>Phone Number</th>
                                                        <th>Address</th>
                                                        <th></th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <% ListCollectionMembers.forEach((ListCollectionMember) => { %>
                                                        <tr ondblclick="handleUpdateProduct('<%= ListCollectionMember.id %>')">
                                                            <td>
                                                                <%= ListCollectionMember._id %>
                                                            </td>
                                                            <td>
                                                                <%= ListCollectionMember.firstname %>
                                                            </td>
                                                            <td>
                                                                <%= ListCollectionMember.lastname %>
                                                            </td>
                                                            <td>
                                                                <%= ListCollectionMember.phoneNumber %>
                                                            </td>
                                                            <td>
                                                                <%= ListCollectionMember.wards %> ,
                                                                    <%= ListCollectionMember.district %> , <br>
                                                                        <%= ListCollectionMember.province %>
                                                            </td>
                                                            <td>
                                                                <input class="btn btn-primary btn-user" type="button" value="Edit" onclick="handleUpdateProduct('<%= ListCollectionMember.id %>')">
                                                            </td>
                                                        </tr>
                                                        <% }) %>
                                                </tbody>
                                            </table>
                                            <script>
                                                function handleUpdateProduct(value) {
                                                    $(location).attr('href', '/member-information/' + value);
                                                }
                                            </script>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- end body-->

                    </div>
                    <!-- End of Main Content -->

                    <%- include('layouts/footer'); -%>

                </div>
                <!-- End of Content Wrapper -->

        </div>
        <!-- End of Page Wrapper -->

        <!-- Scroll to Top Button-->
        <a class="scroll-to-top rounded" href="#page-top">
            <i class="fas fa-angle-up"></i>
        </a>

        <!-- Logout Modal-->
        <%- include('layouts/logout'); -%>

            <%- include('layouts/script-table'); -%>

    </body>

</html>